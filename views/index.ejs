<!DOCTYPE html>
<html lang="en" ng-app="app">
	
  <% include partials/header %>

	<body>
		<div class="container">
			
      <% include partials/navbar %>
			<div id="data_map" style="width: 100%; height: 500px;"></div>
			<table id="statusTable" class="table table-striped table-hover" ng-controller="nodeCtrl">
				<tr>
					<th></th>
					<th>Host Name</th>
					<th>IP</th>
					<th>Status</th>
					<th>Available Space</th>
					<th>Uptime</th>
					<th>Service Uptime</th>
					<th>Average Load</th>
					<th>Node Location</th>
				</tr>
				<tr ng-repeat="node in nodeList" ng-class="{'danger':(node.status=='offline')}">
					<td>{{$index}}</td>
					<td>{{ node.hostname }}</td>
					<td>{{ node.ip }}</td>
					<td ng-if="node.status == 'online'">
						<img src="public/img/ok-18.png" alt="ok">
					  </td>
					  <td ng-if="node.status == 'warning'">
						<img src="public/img/warning-16.png" alt="warning">
					  </td>
					  <td ng-if="node.status == 'offline'">
						<img src="public/img/error-16.png" alt="error">
					  </td>
					<td>{{ node.spaceAvailable}} MBytes</td>
					<td> {{node.systemUptime}}</td>
					<td>{{node.serviceUptime}}</td>
					<td>{{node.averageLoads}}</td>
					<td>{{node.city}}</td>
				</tr>
			</table>
		
		</div>
		
		<script src="//code.jquery.com/jquery-1.11.2.min.js"></script>		
		<script src="//cdn.socket.io/socket.io-1.3.2.js"></script>
		<script src="//ajax.googleapis.com/ajax/libs/angularjs/1.2.26/angular.min.js"></script>
		<script src="/public/js/bootstrap.js" type="text/javascript"></script>
		<script src="https://maps.googleapis.com/maps/api/js?sensor=false"></script>
		<script>
			var socket = io();
			var nodes = <%- JSON.stringify(nodes) %>;
			var map;
			socket.on('nodenamechange', function(newNode) {	
				if(!!nodes[newNode.ip] && !!(nodes[newNode.ip]["overlay"])) {
					setTimeout((function (overlay) {
						return function() {
							overlay.setMap(null);
							overlay = null;
						};
					})(nodes[newNode.ip].overlay), 3000);
				}				
				nodes[newNode.ip] = newNode;
				drawNode(newNode);
				var scope = angular.element($('#statusTable')).scope();
				scope.$apply(function() {
					scope.nodeList[newNode.ip] = newNode;
				});
			});

			var app = angular.module('app', []);
			app.controller('nodeCtrl', function($scope, $log) {
				$scope.nodeList = <%- JSON.stringify(nodes) %>;
				
			});
			
			function serviceCmd(cmd) {
				$.post( cmd+"All", function( data ) {
				  
				}).done(function() {
					console.log(cmd + ' services successfully!');
				  }).fail(function() {
					console.log('Error '+cmd + ' services!');
				  });
			}
		</script>
		<script src="/public/js/map.js" type="text/javascript"></script>
	</body>
</html>
